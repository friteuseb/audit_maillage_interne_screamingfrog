<?xml version="1.0" encoding="UTF-8"?>
<seospiderconfig>
  <configuration>
    <extraction>
      <!-- Contenu principal -->
      <custom name="MainContent" 
              xpath="normalize-space(string(//main[contains(@class,'product-main')] | //article[contains(@class,'product-entry')] | //section[contains(@class,'product-info')]))"
              type="text"/>
      
      <!-- Liens éditoriaux seulement -->
      <custom name="EditorialLinks" 
              xpath="//main[contains(@class,'product-main')]//a[not(contains(@class,'button')) and not(contains(@class,'nav-top-link'))] | //article[contains(@class,'product-entry')]//a[not(contains(@class,'button')) and not(contains(@class,'nav-top-link'))] | //section[contains(@class,'product-info')]//a[not(contains(@class,'button')) and not(contains(@class,'nav-top-link'))]"
              type="links"/>
      
      <!-- Zone de contenu complète -->
      <custom name="ContentZone" 
              xpath="//main[contains(@class,'product-main')] | //article[contains(@class,'product-entry')] | //section[contains(@class,'product-info')]"
              type="html"/>
    </extraction>
    
    <!-- Paramètres optimisés -->
    <crawl>
      <respectRobots>true</respectRobots>
      <followInternalNofollow>false</followInternalNofollow>
      <crawlSubdomains>false</crawlSubdomains>
    </crawl>
  </configuration>
</seospiderconfig>