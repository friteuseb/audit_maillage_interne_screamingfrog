<?xml version="1.0" encoding="UTF-8"?>
<seospiderconfig>
  <configuration>
    <extraction>
      <!-- Contenu principal -->
      <custom name="MainContent" 
              xpath="//main//text() | //article//text()"
              type="text"/>
      
      <!-- Liens éditoriaux seulement -->
      <custom name="EditorialLinks" 
              xpath="//main//a[not(contains(@href, '#')) and not(contains(@class, 'button')) and not(contains(@class, 'nav-top-link'))] | //article//a[not(contains(@href, '#')) and not(contains(@class, 'button')) and not(contains(@class, 'nav-top-link'))]"
              type="links"/>
      
      <!-- Zone de contenu complète -->
      <custom name="ContentZone" 
              xpath="//main | //article"
              type="html"/>
    </extraction>
    
    <!-- Paramètres optimisés -->
    <crawl>
      <respectRobots>true</respectRobots>
      <followInternalNofollow>false</followInternalNofollow>
      <crawlSubdomains>false</crawlSubdomains>
    </crawl>
  </configuration>
</seospiderconfig>