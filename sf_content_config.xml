<?xml version="1.0" encoding="UTF-8"?>
<seospiderconfig>
  <configuration>
    <extraction>
      <!-- Contenu principal -->
      <custom name="MainContent" 
              xpath="//article//text() | //section[contains(@class, 'entry-content')]//text()"
              type="text"/>
      
      <!-- Liens éditoriaux seulement -->
      <custom name="EditorialLinks" 
              xpath="//article//a[not(contains(@class, 'button')) and not(ancestor::nav)]"
              type="links"/>
      
      <!-- Zone de contenu complète -->
      <custom name="ContentZone" 
              xpath="//article | //section[contains(@class, 'entry-content')]"
              type="html"/>
    </extraction>
    
    <!-- Paramètres optimisés -->
    <crawl>
      <respectRobots>true</respectRobots>
      <followInternalNofollow>false</followInternalNofollow>
      <crawlSubdomains>false</crawlSubdomains>
    </crawl>
  </configuration>
</seospiderconfig>